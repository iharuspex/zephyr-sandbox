&i2c2 {
	pinctrl-0 = <&i2c2_scl_pb10 &i2c2_sda_pb11>;
	pinctrl-names = "default";
	status = "okay";

	mpu6050: mpu6050@68 {
		compatible = "invensense,mpu6050";
		status = "okay";
		reg = <0x68>;
		int-gpios = <&gpiob 2 GPIO_ACTIVE_HIGH>;
	};
};