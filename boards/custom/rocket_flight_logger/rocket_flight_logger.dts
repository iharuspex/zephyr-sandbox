/dts-v1/;
#include <st/f1/stm32f103X8.dtsi>
#include <st/f1/stm32f103c(8-b)tx-pinctrl.dtsi>

/ {
	model = "Rocket Flight Logger Board";
	compatible = "st,stm32f103c8";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	esp_en: regulator_esp_en {
		compatible = "regulator-fixed";
		regulator-name = "ESP_EN";
		// enable-gpios = <&gpiob 8 GPIO_ACTIVE_HIGH>;
		enable-gpios = <&gpiob 9 GPIO_ACTIVE_LOW>;
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
};

&pll {
	mul = <9>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(72)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <2>;
	apb2-prescaler = <1>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	current-speed = <115200>;
	pinctrl-names = "default";
	status = "okay";
};

&usart2 {
	pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
	current-speed = <115200>;
	pinctrl-names = "default";
	status = "okay";

	// wifi: esp8266_wifi {
	// 	compatible = "espressif,esp-at";
	// 	status = "okay";
	// 	power-gpios = <&gpiob 8 GPIO_ACTIVE_HIGH>;
	// 	reset-gpios = <&gpiob 9 GPIO_ACTIVE_LOW>;
	// };
};

&spi1 {
	pinctrl-0 = <&spi1_sck_remap1_master_pb3 &spi1_miso_remap1_master_pb4 &spi1_mosi_remap1_master_pb5>;
	pinctrl-names = "default";
	status = "okay";
	cs-gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;

	at45: at45db641e@0 {
		compatible = "atmel,at45";
		label = "AT45";
		spi-max-frequency = <10000000>;
		reg = <0>;

		jedec-id = [1f 28 00];
		size = <67108864>;
		sector-size = <270336>;
		block-size = <2112>;
		page-size = <264>;
		// enter-dpd-delay = <>;
		// exit-dpd-delay = <>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			storage_partition: partition@0 {
				label = "storage";
				reg = <0x00000000 0x00100000>;
			};
		};
	};
};

